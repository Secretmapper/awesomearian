@import "variables"

body
  font-family 'Avenir Next', 'Helvetica Neue', Helvetica, sans-serif
  line-height 1.5
  font-size 16px
  margin 0

.main-nav
  background-color white
  border-bottom 1px solid rgba(0,0,0,0.05)
  position fixed
  top 0
  z-index 9999
  width 100%
  transition transform 200ms linear
  transform translateY(0%)

.main-nav.sneakpeek--hidden
  transform translateY(-100%)

.main-body
  margin-top 48px

.container
  padding 0 1em 0 1em
  @media (min-width 700px)
    padding 0
  margin 1em auto
  max-width 700px

.welcome-msg
  padding 1em
  background #fafafa

.post-image
  color white
  height 420px
  background-position center center
  background-size cover
  position relative

.post-image__caption
  bottom 10vh
  position absolute
  width 100%
  h1, h2
    margin 0 auto
    padding 0 1em 0 1em
    max-width 700px
  h2
    color rgba(255,255,255,0.65)

.post-title
  h1
    font-size 2em
    @media (min-width lg_size)
      font-size 2.5em
  h2
    font-weight 400

.post-title_no-margin
  h1
    margin-bottom 0
  h2
    margin-top 0

.post-title_preview
  h1
    font-size 1.5em
  h2
    font-size 1em

.image-preview
  height 200px
  width 100%
  overflow hidden
  position relative
  img
    width 100%
    position: absolute;
    left: -1000%;
    right: -1000%;
    top: -1000%;
    bottom: -1000%;
    margin: auto;
    min-height: 100%;
    min-width: 100%;

article.post
  padding 0 1em 0 1em
  @media (min-width 700px)
    padding 0
  .meta__avatar
    border-radius 100%
    float left
    margin 0 10px 0 0
    height 36px
    width 36px
  .meta__inline
    .meta__author
      color #00ab6b
      display block
      font-size 14px
      text-decoration none
    .meta__supplemental
      color rgba(0, 0, 0, 0.44)
      font-size 12px

.posts__label
  font-weight 600
  line-height 1em
  margin-bottom 1em
  padding-bottom 0.5em
  border-bottom 1px solid rgba(0,0,0,0.05)

.post-preview
  color inherit
  text-decoration none

.awesome-logo
  padding-left 1em

text
  font-weight 100
  animation draw 5s infinite alternate

@keyframes draw
  0%
    stroke-dashoffset 150
    stroke-dasharray 100
  50%
    stroke-dashoffset 70
    stroke-dasharray 250
  100%
    stroke-dashoffset 50
    stroke-dasharray 150
